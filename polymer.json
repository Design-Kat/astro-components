{
  "npm": true,
  "module-resolution": "node",
  "builds": [{
      "name": "bundled",
      "bundle": true,
      "js": {
        "minify": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      }
    },
    {
      "name": "amd",
      "bundle": {
        "inlineScripts": false
      },
      "js": {
        "transformModulesToAmd": true
      }
    }
  ],
  "lint": {
    "rules": ["polymer-3"]
  }
}

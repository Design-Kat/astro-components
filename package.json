{
  "name": "astro-app",
  "flat": true,
  "version": "3.0.0",
  "author": "Rocket Communications",
  "private": true,
  "description": "Sample Components from the Astro UXDS Library",
  "main": "index.html",
  "dependencies": {
    "@polymer/polymer": "^3.2.0",
    "@webcomponents/webcomponentsjs": "^2.2.9",
    "lit-element": "^2.1.0"
  },
  "devDependencies": {
    "acorn": "^6.1.1",
    "ajv": "^6.10.0",
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.0",
    "@open-wc/building-rollup": "^0.3.0",
    "@open-wc/demoing-storybook": "^0.2.0",
    "@open-wc/eslint-config": "^0.4.1",
    "@open-wc/prettier-config": "^0.1.0",
    "@open-wc/testing": "^0.11.1",
    "@open-wc/testing-karma": "^1.0.0",
    "@open-wc/testing-karma-bs": "^1.0.0",
    "browser-sync": "^2.26.4",
    "del": "^4.1.0",
    "eslint-plugin-html": "^5.0.3",
    "gulp": "^4.0.1",
    "gulp-autoprefixer": "^6.1.0",
    "gulp-clean": "^0.4.0",
    "gulp-concat": "^2.6.1",
    "gulp-concat-css-import": "^1.0.5",
    "gulp-csso": "^3.0.1",
    "gulp-if": "^2.0.2",
    "gulp-order": "^1.2.0",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^1.4.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-watch": "^5.0.1",
    "http-server": "^0.11.1",
    "husky": "^1.0.0",
    "lint-staged": "^8.0.0",
    "livereload-js": "^3.0.0",
    "owc-dev-server": "^0.3.0",
    "postcss-color-function": "^4.1.0",
    "postcss-color-mod-function": "^3.0.3",
    "postcss-custom-properties": "^8.0.10",
    "rimraf": "^2.6.3",
    "rollup": "^1.6.0",
    "rollup-plugin-cpy": "^1.1.0",
    "rollup-plugin-html-entry": "^0.2.0",
    "rollup-plugin-lit-css": "^2.0.0",
    "rollup-plugin-livereload": "^1.0.0",
    "@storybook/html": "^5.0.11",
    "@storybook/addon-knobs": "^5.0.0"
  },
  "repository": "git@bitbucket.org:rocketcom/astro-app.git",
  "license": "MIT",
  "scripts": {
    "start": "owc-dev-server -o",
    "build": "rimraf dist && rollup -c rollup.config.js",
    "lint:eslint": "eslint --ext .js,.html .",
    "format:eslint": "eslint --ext .js,.html . --fix",
    "lint:prettier": "prettier \"**/*.js\" --list-different || (echo '↑↑ these files are not prettier formatted ↑↑' && exit 1)",
    "format:prettier": "prettier \"**/*.js\" --write",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "test": "karma start --coverage",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "test:update-snapshots": "karma start --update-snapshots",
    "test:prune-snapshots": "karma start --prune-snapshots",
    "test:legacy": "karma start --legacy --coverage",
    "test:legacy:watch": "karma start --legacy --auto-watch=true --single-run=false",
    "test:bs": "karma start karma.bs.config.js --legacy --coverage",
    "site:build": "npm run storybook:build",
    "storybook": "start-storybook -p 9001",
    "storybook:build": "build-storybook -o _site -s storybook-static",
    "start:build": "http-server dist -o -c-1",
    "watch:build": "rimraf dist && rollup --watch -c rollup.config.js & http-server dist -o -c-1"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
